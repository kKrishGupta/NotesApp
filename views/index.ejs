<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  <div class="main w-full min-h-screen bg-zinc-900">
  <div class="form text-white p-12">
    <form action="/create" method="post">
      <input
        class="block w-full rounded-md outline-none px-5 py-2 bg-zinc-800 text-white"
        type="text"
        placeholder="Title goes here..."
        name="title"
      >

      <textarea
        class="block w-full rounded-md outline-none mt-3 px-5 py-2 resize-none bg-zinc-800 text-white"
        placeholder="Enter your task..."
        name = "details"
      ></textarea>

      <input
        class="mt-4 bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-5 rounded-md"
        type="submit"
        value="Create Task"
      >
    </form>
  </div>

  <div class="tasks flex gap-3 flex-wrap p-10">
    <% if(files.length > 0) { %>
          <% files.forEach(function(val) { %>
              <div class="task  w-72 px-3 py-4 rounded-md bg-zinc-800">
                  <h2 class="text-white text-3xl tracking-tighter"><%= val %></h2>
                  <a class="text-blue-500 inline-block mt-3" href="/files/<%= val %>">Read More</a>
              </div>
          <% }) %>
      <% } else{ %>
        <h3 class="text-zinc-600">No Task Yet</h3>
        <% } %>
    
